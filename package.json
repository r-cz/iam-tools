{
  "name": "iam-tools",
  "private": true,
  "version": "0.1.0",
  "description": "A collection of specialized tools for Identity and Access Management (IAM) development and debugging",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b tsconfig.app.json && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "clean": "bun ./scripts/clean.js",
    "clean:dry": "bun ./scripts/clean.js --dry",
    "clean:deep": "bun ./scripts/clean.js --deep",
    "test": "bun test --preload ./src/tests/preload.ts",
    "test:watch": "bun test --watch --preload ./src/tests/preload.ts",
    "test:coverage": "bun test --coverage --preload ./src/tests/preload.ts",
    "test:update": "bun test --update-snapshots --preload ./src/tests/preload.ts",
    "dev:proxy": "wrangler pages dev --port 8788 ./functions",
    "dev:all": "concurrently \"bun run dev\" \"bun run dev:proxy\""
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@radix-ui/react-avatar": "^1.1.7",
    "@radix-ui/react-collapsible": "^1.1.8",
    "@radix-ui/react-dialog": "^1.1.11",
    "@radix-ui/react-dropdown-menu": "^2.1.12",
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-popover": "^1.1.11",
    "@radix-ui/react-progress": "^1.1.4",
    "@radix-ui/react-select": "^2.2.2",
    "@radix-ui/react-separator": "^1.1.4",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-switch": "^1.2.2",
    "@radix-ui/react-tabs": "^1.1.9",
    "@radix-ui/react-tooltip": "^1.2.4",
    "@tailwindcss/vite": "^4.1.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "jose": "^6.0.10",
    "lucide-react": "^0.507.0",
    "next-themes": "^0.4.6",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.56.2",
    "react-router-dom": "^7.5.3",
    "react-simple-code-editor": "^0.14.1",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.2.0",
    "tailwindcss": "^4.1.5",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "^1.2.12",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@vitejs/plugin-react": "^4.4.1",
    "bun-types": "^1.2.12",
    "concurrently": "^9.1.2",
    "eslint": "^9.26.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.0.0",
    "happy-dom": "^17.4.6",
    "node-jose-tools": "^2.0.4",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.31.1",
    "vite": "^6.3.4",
    "vite-plugin-pwa": "^1.0.0",
    "wrangler": "^4.14.1"
  }
}
