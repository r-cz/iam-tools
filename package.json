{
  "name": "iam-tools",
  "private": true,
  "version": "0.1.0",
  "description": "A collection of specialized tools for Identity and Access Management (IAM) development and debugging",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b tsconfig.app.json && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "clean": "bun ./scripts/clean.js",
    "clean:dry": "bun ./scripts/clean.js --dry",
    "clean:deep": "bun ./scripts/clean.js --deep",
    "test": "bun test --preload ./src/tests/preload.ts",
    "test:watch": "bun test --watch --preload ./src/tests/preload.ts",
    "test:coverage": "bun test --coverage --preload ./src/tests/preload.ts",
    "test:update": "bun test --update-snapshots --preload ./src/tests/preload.ts",
    "dev:proxy": "wrangler pages dev --port 8788 ./functions",
    "dev:all": "concurrently \"bun run dev\" \"bun run dev:proxy\""
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-collapsible": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@tailwindcss/vite": "^4.0.17",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "jose": "^6.0.10",
    "lucide-react": "^0.484.0",
    "next-themes": "^0.4.6",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.4.0",
    "sonner": "^2.0.1",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.17",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.13.13",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "bun-types": "^1.2.6",
    "concurrently": "^9.1.2",
    "eslint": "^9.23.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "happy-dom": "^17.4.4",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.28.0",
    "vite": "^6.2.3",
    "vite-plugin-pwa": "^0.21.2",
    "wrangler": "^4.5.0"
  }
}
